<h1>List of Movies</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>

  <% @movies.each do |a_movie| %>
    <tr>
      <td><%= a_movie.id %></td>
      <td>
        <% if a_movie.image.present? %>
          <img src="<%= a_movie.image %>" width="100">
        <% end %>
      </td>
      <td><%= a_movie.title %></td>
      <td><%= a_movie.year %></td>
      <td><%= a_movie.director&.name || 'Unknown Director' %></td>
      <td>
        <a href="/movies/<%= a_movie.id %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>
