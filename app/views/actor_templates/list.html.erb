<h1>List of Actors</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Name</th>
    <th>Date of Birth</th>
    <th></th>
  </tr>

  <% @actors.each do |actor| %>
    <tr>
      <td><%= actor.id %></td>
      <td>
        <% if actor.image.present? %>
          <img src="<%= actor.image %>" width="100">
        <% end %>
      </td>
      <td><%= actor.name %></td>
      <td><%= actor.dob %></td>
      <td>
        <a href="/actors/<%= actor.id %>">Show details</a>
      </td>
    </tr>
  <% end %>
</table>
